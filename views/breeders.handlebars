<div class="container">

    <h2 class="text-center mb-3">Breeders</h2>

    <div class="row">
        <div class="col-sm-6 my-4">
            <h3>Search for a Breeder!</h3>
        </div>

        <div class="col-sm-6 text-center my-4">
            <h3>Don't See a Breeder? Click Here to Add Them!</h3>
            <a href="/add-breeder">
                <button type="button" class="btn btn-dark" id="add-breeder">Add Breeder</button>
            </a>
        </div>

    </div>
    {{!-- All Breeders Displayed --}}

    <div class="row">
        <div class="col-sm-10">


        </div>
        <table class="table table-hover">
            <input class="col-sm-3 form-group" type="text" id="userInput" placeholder="Search Breeders">
            <select class="form-group ml-2" id="breederGroup">
                <option val=""></option>
                <option>Hound</option>
                <option>Terrier</option>
                <option>Working</option>
                <option>Herding</option>
                <option>Sporting</option>
                <option>Non-Sporting</option>
                <option>Toy</option>
            </select>
            <button class="btn btn-dark clear form-group mx-2">Clear</button>

            <div class="col-sm">

                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Breed</th>
                        <th>Mission</th>
                        <th>Litters</th>
                        <th>Litter Dates</th>
                        <th>Group</th>
                    </tr>
                </thead>

                {{#each breeders}}

                <tbody id="myTable">
                    <tr>
                        <th><strong>{{dataValues.name}}</th>
                        </strong>
                        <td>{{dataValues.email}}</td>
                        <td>{{dataValues.breed}}</td>
                        <td>{{dataValues.mission}}</td>

                        <td>
                            {{#if dataValues.litters}}
                            Yes
                            {{else}}
                            No
                            {{/if }}
                        </td>
                        <td>
                            {{#if dataValues.litterDate}}
                            {{dataValues.litterDate}}
                            {{else}}
                            -
                            {{/if}}
                        </td>
                        <td>{{dataValues.group}}</td>
                    </tr>
                </tbody>



                {{!-- If there is an upcoming litter it will display yes and the date, if not then it will display No and no date  --}}


                {{/each}}
        </table>
    </div>
</div>

</div>
</div>

<script>
    $(document).ready(function () {
        $("#userInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });

    $(document).ready(function () {
        $('#breederGroup').change(function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)

            });
        });
    });

    $(".clear").on("click", function () {
        event.preventDefault();

        $("#myInput").val("").trigger("keyup");
        $("#breederGroup").val("").trigger("change");
    })
</script>